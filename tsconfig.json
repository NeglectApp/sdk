{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "dist",
    "rootDir": ".",

    "declaration": true,
    "declarationMap": false,
    "sourceMap": false,

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    "verbatimModuleSyntax": false
  },
  "include": ["index.ts", "src/**/*"]
}
